<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_marginBottom="@dimen/_4sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:padding="@dimen/_4sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgCard"
                app:civ_border_width="1dp"
                app:civ_border_color="@color/gray_light"
                app:cardCornerRadius="@dimen/_50sdp"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"/>

            <RelativeLayout
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/imgCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvName"
                    android:layout_alignParentLeft="true"
                    style="@style/TextStyle_bold"
                    android:text="@string/t1"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:layout_marginLeft="@dimen/_6sdp"
                    android:layout_marginRight="@dimen/_6sdp"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/black"
                    android:layout_toLeftOf="@+id/tvFollow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_alignParentLeft="true"
                    android:id="@+id/tvDesignation"
                    style="@style/TextStyle_bold"
                    android:layout_below="@+id/tvName"
                    android:text="@string/t2"
                    android:layout_marginLeft="@dimen/_6sdp"
                    android:layout_marginRight="@dimen/_6sdp"
                    android:textSize="@dimen/_11sdp"
                    android:textColor="@color/gray_8"
                    android:layout_toLeftOf="@+id/tvFollow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:id="@+id/icMenue"
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/_4sdp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_three_dot"
                    android:backgroundTint="@color/gray_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tvFollow"
                    android:gravity="center"
                    android:layout_marginRight="@dimen/_12sdp"
                    android:textSize="@dimen/_11sdp"
                    android:textColor="@color/black"
                    style="@style/TextStyle_regular"
                    android:text="Follow"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/drawable_rectangle_corner_boarder"
                    android:layout_toLeftOf="@+id/icMenue"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_25sdp"/>

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>