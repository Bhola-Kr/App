<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginTop="@dimen/_24sdp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="@dimen/_32sdp"
                style="@style/TextStyle_bold"
                android:text="RATE"
                android:textColor="@color/colorAccent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textSize="@dimen/_32sdp"
                style="@style/TextStyle_bold"
                android:text="US"
                android:layout_marginLeft="@dimen/_9sdp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>



        </LinearLayout>

        <TextView
            android:visibility="gone"
            android:textSize="@dimen/_12sdp"
            style="@style/TextStyle_bold"
            android:textColor="@color/black"
            android:gravity="center"
            android:text="You Have Logged out successfuly"
            android:layout_marginTop="@dimen/_24sdp"
            android:background="#4030aec7"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"/>

            <TextView
                android:visibility="gone"
            android:layout_marginRight="@dimen/_12sdp"
            android:layout_marginLeft="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_32sdp"
            android:background="@drawable/drawable_rectangle_corner_boarder_blue"
            android:gravity="center"
            android:textSize="@dimen/_14sdp"
            style="@style/TextStyle_regular"
            android:text="LOGIN AGAIN"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"/>

        <TextView
            android:layout_marginTop="@dimen/_12sdp"
            android:textSize="@dimen/_14sdp"
            style="@style/TextStyle_regular"
            android:gravity="center"
            android:visibility="gone"
            android:textColor="@color/colorAccent"
            android:text="EXIT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="@dimen/_12sdp"
            android:textSize="@dimen/_14sdp"
            style="@style/TextStyle_regular"
            android:gravity="center"
            android:textColor="@color/black"
            android:text="Rate your Experience"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <RatingBar
            android:visibility="invisible"
            android:layout_gravity="center"
            android:numStars="5"
            android:layout_width="@dimen/_180sdp"
            android:layout_height="wrap_content"/>

        <EditText
            android:visibility="gone"
            android:selectAllOnFocus="false"
            android:layout_marginBottom="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_32sdp"
            android:layout_marginRight="@dimen/_12sdp"
            android:layout_marginLeft="@dimen/_12sdp"
            android:padding="@dimen/_8sdp"
            android:gravity="top"
            android:textColorHint="@color/gray_8"
            android:textColor="@color/black"
            style="@style/TextStyle_bold"
            android:hint="Leave a Comment"
            android:background="@drawable/drawable_rectangle_corner_boarder"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_130sdp"/>

        <TextView
            android:id="@+id/tvRate"
            android:layout_marginTop="@dimen/_24sdp"
            android:layout_marginLeft="@dimen/_12sdp"
            android:layout_marginRight="@dimen/_12sdp"
            android:layout_marginBottom="@dimen/_24sdp"
            android:textColor="@color/white"
            android:textSize="@dimen/_14sdp"
            style="@style/TextStyle_bold"
            android:gravity="center"
            android:text="Rate Now"
            android:background="@drawable/drawable_round_corner_solid"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"/>


    </LinearLayout>

    </ScrollView>

</layout>