<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:id="@+id/lyMain"
        android:layout_margin="@dimen/_4sdp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_330sdp">

        <ImageView
            android:id="@+id/imgFram"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_330sdp"/>

        <RelativeLayout
            android:id="@+id/lyIm1"
            android:layout_marginTop="@dimen/_28sdp"
            android:layout_marginRight="@dimen/_24sdp"
            android:layout_alignParentRight="true"
            android:elevation="@dimen/_3sdp"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_200sdp">

            <ImageView
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_image_gallery"
                android:layout_width="match_parent"
                android:padding="@dimen/_62sdp"
                android:background="@color/gray_light"
                android:layout_height="match_parent"/>

            <com.dreammedia.dreammedia.customWigits.viewPager.imageview.TopCropImageView
                android:id="@+id/img1"
                android:scaleType="matrix"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="@dimen/_200sdp"/>

        </RelativeLayout>

        <ImageView
            android:layout_marginLeft="@dimen/_24sdp"
            android:layout_marginTop="@dimen/_60sdp"
            android:background="@color/f1"
            android:scaleType="centerCrop"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_200sdp"/>


        <com.dreammedia.dreammedia.customWigits.viewPager.edittext.RotatableAutofitEditText
            android:id="@+id/tvT1"
            style="@style/TextStyle_bold"
            android:layout_marginLeft="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_220sdp"
            android:textSize="@dimen/_28sdp"

            xmlns:autofit="http://schemas.android.com/apk/res-auto"
            android:text="Happy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:padding="6dp"
            android:textColor="@color/c0"
            autofit:clipBounds="false"
            android:elevation="@dimen/_3sdp"
            autofit:maxTextSizee="@dimen/temp5"
            autofit:minTextSizee="@dimen/autoresize_min_text_size"
            autofit:minWidth="@dimen/autoresize_min_width"
            autofit:movable="true"
            autofit:resizable="false"
            autofit:rotatable="false" />

        <com.dreammedia.dreammedia.customWigits.viewPager.edittext.RotatableAutofitEditText
            android:id="@+id/tvT2"
            style="@style/TextStyle_bold"
            android:layout_marginLeft="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_260sdp"
            android:textSize="@dimen/_28sdp"
            xmlns:autofit="http://schemas.android.com/apk/res-auto"
            android:text="Birthday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:padding="6dp"
            android:elevation="@dimen/_3sdp"
            android:textColor="@color/c0"
            autofit:clipBounds="false"
            autofit:maxTextSizee="@dimen/temp5"
            autofit:minTextSizee="@dimen/autoresize_min_text_size"
            autofit:minWidth="@dimen/autoresize_min_width"
            autofit:movable="true"
            autofit:resizable="false"
            autofit:rotatable="false" />

    </RelativeLayout>

</RelativeLayout>
