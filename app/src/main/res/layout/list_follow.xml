<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_marginLeft="@dimen/_6sdp"
        android:layout_marginRight="@dimen/_6sdp"
        android:elevation="@dimen/_3sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:padding="@dimen/_4sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgCard"
                android:src="@drawable/images"
                app:civ_border_width="1dp"
                app:civ_border_color="@color/gray_light"
                app:cardCornerRadius="@dimen/_50sdp"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"/>

            <TextView
                android:id="@+id/tvName"
                style="@style/TextStyle_bold"
                android:text="@string/t1"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginLeft="@dimen/_6sdp"
                android:layout_marginRight="@dimen/_6sdp"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/black"
                android:layout_toLeftOf="@+id/tvFollow"
                android:layout_toRightOf="@+id/imgCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


            <TextView
                android:id="@+id/tvDesignation"
                style="@style/TextStyle_bold"
                android:layout_below="@+id/tvName"
                android:text="@string/t2"
                android:layout_marginLeft="@dimen/_6sdp"
                android:layout_marginRight="@dimen/_6sdp"
                android:textSize="@dimen/_11sdp"
                android:textColor="@color/gray_8"
                android:layout_toLeftOf="@+id/tvFollow"
                android:layout_toRightOf="@+id/imgCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvDescription"
                style="@style/TextStyle_bold"
                android:layout_below="@+id/tvDesignation"
                android:layout_marginTop="@dimen/_6sdp"
                android:layout_marginLeft="@dimen/_6sdp"
                android:layout_marginRight="@dimen/_6sdp"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/black"
                android:layout_toRightOf="@+id/imgCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvFollow"
                android:layout_marginTop="@dimen/_2sdp"
                android:background="@drawable/drawable_round_corner_boarder"
                android:layout_alignParentRight="true"
                style="@style/TextStyle_bold"
                android:text="@string/follow"
                android:gravity="center"
                android:textColor="@color/colorAccent"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_25sdp"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>