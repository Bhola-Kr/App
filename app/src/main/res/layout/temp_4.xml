<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/lyMain"
        android:layout_margin="@dimen/_4sdp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_350sdp">

        <com.dreammedia.dreammedia.customWigits.viewPager.imageview.TopCropImageView
            android:id="@+id/img1"
            android:src="@drawable/nature"
            android:scaleType="centerCrop"
            android:layout_marginLeft="@dimen/_80sdp"
            android:layout_marginTop="@dimen/_26sdp"
            android:layout_width="@dimen/_160sdp"
            android:layout_height="@dimen/_220sdp"/>

        <ImageView
            android:id="@+id/imgFram"
            android:scaleType="centerCrop"
            android:src="@drawable/temp4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <ImageView
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <com.dreammedia.dreammedia.customWigits.viewPager.edittext.RotatableAutofitEditText
            android:id="@+id/tvT1"
            style="@style/TextStyle_bold"

            android:layout_marginTop="@dimen/_315sdp"
            android:layout_marginLeft="@dimen/_50sdp"

            xmlns:autofit="http://schemas.android.com/apk/res-auto"
            android:text="Always happy to celebrate your special day."
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="6dp"
            android:textColor="@android:color/white"
            autofit:clipBounds="false"
            autofit:maxTextSizee="@dimen/autoresize_max_text_size"
            autofit:minTextSizee="@dimen/autoresize_min_text_size"
            autofit:minWidth="@dimen/autoresize_min_width"
            autofit:movable="true"
            autofit:resizable="false"
            autofit:rotatable="false" />

    </RelativeLayout>

</RelativeLayout>
