<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.zyp.cardview.YcCardView
        android:id="@+id/c1"
        android:layout_marginLeft="@dimen/_6sdp"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        app:ycCardCornerRadius="@dimen/_3sdp"
        app:ycCardElevation="3dp"
        app:ycCardMaxElevation="5dp"
        app:ycStartShadowColor="@color/gray_8">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:gravity="center|top"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/ic1"
                    app:civ_border_width="1dp"
                    app:civ_border_color="@color/gray_light"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_centerHorizontal="true"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_70sdp"/>

                <TextView
                    android:id="@+id/tvName"
                    android:textSize="@dimen/_11sdp"
                    style="@style/TextStyle_regular"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_below="@+id/ic1"
                    android:text=""
                    android:maxLines="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tvEmail"
                    android:textSize="@dimen/_11sdp"
                    style="@style/TextStyle_regular"
                    android:gravity="center"
                    android:visibility="gone"
                    android:layout_below="@+id/ic1"
                    android:text=""
                    android:maxLines="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tvFollow"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_9sdp"
                    android:gravity="center"
                    android:text="Follow"
                    android:maxLines="1"
                    android:layout_marginRight="@dimen/_8sdp"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:background="@drawable/drawable_rectangle_corner_solid"
                    android:backgroundTint="@color/splash_background"
                    style="@style/TextStyle_bold"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_25sdp"/>


            </LinearLayout>

            <ImageView
                android:id="@+id/icCross"
                android:padding="@dimen/_4sdp"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_cross_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

    </com.zyp.cardview.YcCardView>

</RelativeLayout>