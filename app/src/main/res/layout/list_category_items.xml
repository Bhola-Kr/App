<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.zyp.cardview.YcCardView
        android:id="@+id/card"
        android:layout_width="@dimen/_120sdp"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/_6sdp"
        android:layout_marginLeft="@dimen/_6sdp"
        android:clickable="true"
        android:focusable="true"
        app:ycCardCornerRadius="@dimen/_12sdp"
        app:ycCardElevation="5dp"
        app:ycCardMaxElevation="5dp"
        android:stateListAnimator="@drawable/state_list_animator"

        app:ycCardPreventCornerOverlap="false"
        app:ycStartShadowColor="@color/gray_8">

        <LinearLayout
            android:id="@+id/lyCard"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_80sdp">

            <ImageView
                android:id="@+id/imgIc"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_globe"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"/>

            <TextView
                android:id="@+id/tvName"
                android:textColor="@color/black"
                style="@style/TextStyle_bold"
                android:layout_marginTop="@dimen/_6sdp"
                android:text="Category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </com.zyp.cardview.YcCardView>


</LinearLayout>